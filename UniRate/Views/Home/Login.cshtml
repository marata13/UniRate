@model User
@{
}

<!-- Stylesheet connection for Login page -->
@section Styles {
    <link rel="stylesheet" href="~/css/LoginStyle.css" />
}


<body>
    <div class="container" id="container">
        <div class="form-container sign-up-container">
            <form asp-controller="Home" asp-action="SignUp" method="post">
                <img class="login-logo" src="@Url.Content("~/visual-material/uniRateLogo.png")" alt="UniRate Logo">
                <h1 class="title">Εγγραφή</h1>
                <div class="infield">
                    <input type="text" placeholder="Username" asp-for="UserName"/>
                    <label></label>
                </div>
                <div class="infield">
                    <input type="email" placeholder="Email" asp-for="Email" />
                    <label></label>
                </div>
                <div class="infield">
                    <input type="password" placeholder="Κωδικός πρόσβασης" asp-for="Password"/>
                    <label></label>
                </div>
                <!-- Submit button -->
                <input type="submit" value="Εγγραφη" />
            </form>
        </div>
        <div class="form-container sign-in-container">
            <form asp-controller="Home" asp-action="Login" method="post">
                <img class="login-logo" src="@Url.Content("~/visual-material/uniRateLogo.png")" alt="UniRate Logo">
                <h1 class="title">Σύνδεση</h1>
                <div class="infield">
                    <input type="text" placeholder="Email" asp-for="UserName" />
                    <label></label>
                </div>
                <div class="infield">
                    <input type="password" placeholder="Κωδικός πρόσβασης" asp-for="Password" />
                    <label></label>
                </div>
                <a href="#" class="forgot">Ξέχασες τον κωδικό σου;</a>
                <!-- Submit button -->
                <input type="submit" value="Login" />
            </form>
        </div>
        <div class="overlay-container" id="overlayCon">
            <div class="overlay">
                <div class="overlay-panel overlay-left">
                    <h1 class="side">Έχεις ήδη λογαριασμό UniRate;</h1>
                    <p>Συνέσου στον λογαριασμό σου πατώντας το παρακάτω κουμπί.</p>
                    <button>Συνδεση</button>
                </div>
                <div class="overlay-panel overlay-right">
                    <h1 class="side">Καλώς ήρθες στο UniRate!</h1>
                    <p>Δημιούργησε νεό λογαριασμό πατώντας το παρακάτω κουμπί.</p>
                    <button>Εγγραφη</button>
                </div>
            </div>
            <button id="overlayBtn"></button>
        </div>
    </div>


    <!-- js code -->
    <script>
        const container = document.getElementById('container');
        const overlayCon = document.getElementById('overlayCon');
        const overlayBtn = document.getElementById('overlayBtn');

        overlayBtn.addEventListener('click', () => {
            container.classList.toggle('right-panel-active');
        });

    </script>


    <!-- Alert in case something went wrong -->
    @if (ViewBag.errorMessage != null)
    {
        <script type="text/javascript">
            alert("@ViewBag.errorMessage");
        </script>
    }

</body>